@model TaskAuthenticationAuthorization.Models.Cabinet_Curriculum

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>

<div>
    <h4>Навчальний план</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Номер
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curriculum.ID)
        </dd>
        <dt class="col-sm-3" width="500%">
            Назва навчального плану
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curriculum.Name)
        </dd>
        <dt class="col-sm-3">
            Освітній ступінь
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curriculum.Education_Level.Name)
        </dd>
        <dt class="col-sm-3">
            Форма навчання
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curriculum.Learning_Form.Name)
        </dd>
        <dt class="col-sm-3">
            Факультет/Інститут
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curriculum.Faculty_Institute.Name)
        </dd>
        <dt class="col-sm-3">
            Спеціальність
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curriculum.Speciality.Name)
        </dd>
        <dt class="col-sm-3">
            Освітня програма
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Curriculum.Educational_Program.Name)
        </dd>
    </dl>

    <h5>Ви впевнені у видаленні?</h5>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CurriculumID" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index">  Повернутися до списку</a>
    </form>
</div>
