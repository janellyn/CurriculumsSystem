@model LoginViewModel

<h2>Log in</h2>

<hr />
<div class="row">
    <div class="col-md-4">

        <a asp-action="Register" asp-controller="Account">Registration</a>

        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <label asp-for="Login">Enter Login</label><br />
                    <input class="form-control" type="text" asp-for="Login" />
                    <span asp-validation-for="Login" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Enter password</label><br />
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

