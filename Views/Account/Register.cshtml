@model RegisterViewModel

<h2>Registration</h2>

<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div>
                    <label asp-for="Login">Enter Login</label><br />
                    <input class="form-control" type="text" asp-for="Login" />
                    <span asp-validation-for="Login" />
                </div>
                <div>
                    <label asp-for="Password">Enter password</label><br />
                    <input class ="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div>
                    <label asp-for="PasswordConfirm">Confirm Password</label><br />
                    <input class="form-control" asp-for="PasswordConfirm" />
                    <span asp-validation-for="PasswordConfirm" />
                </div>
                <div class="form-group">
                    <br />
                    <input type="submit" value="Register" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

